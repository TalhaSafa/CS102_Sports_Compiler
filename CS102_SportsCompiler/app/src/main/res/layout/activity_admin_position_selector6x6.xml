<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPositionSelector6x6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/admin_fragment_container6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/textView12_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Create Match!"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/halfImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/admin_fragment_container6"
        app:layout_constraintVertical_bias="0.13999999" />

    <TextView
        android:id="@+id/textView12_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Choose a position for yourself!"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/halfImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12_2"
        app:layout_constraintVertical_bias="0.13" />

    <ImageView
        android:id="@+id/halfImageView"
        android:layout_width="match_parent"
        android:layout_height="358dp"
        android:cropToPadding="true"
        android:src="@drawable/half_field"
        app:layout_constraintBottom_toBottomOf="@+id/admin_fragment_container6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/position_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/highlighted_button"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/halfImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/halfImageView"
        app:layout_constraintVertical_bias="0.100000024" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/position_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/highlighted_button"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/halfImageView"
        app:layout_constraintEnd_toEndOf="@+id/admin_fragment_container6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position_2"
        app:layout_constraintVertical_bias="0.13" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/position_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/highlighted_button"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/halfImageView"
        app:layout_constraintEnd_toEndOf="@+id/admin_fragment_container6"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="@+id/admin_fragment_container6"
        app:layout_constraintTop_toTopOf="@+id/halfImageView"
        app:layout_constraintVertical_bias="0.39" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/position_4"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/highlighted_button"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/halfImageView"
        app:layout_constraintEnd_toEndOf="@+id/admin_fragment_container6"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="@+id/admin_fragment_container6"
        app:layout_constraintTop_toTopOf="@+id/halfImageView"
        app:layout_constraintVertical_bias="0.39" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/position_2"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/highlighted_button"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/halfImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position_1"
        app:layout_constraintVertical_bias="0.13" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/position_6"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/highlighted_button"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/halfImageView"
        app:layout_constraintEnd_toEndOf="@+id/admin_fragment_container6"
        app:layout_constraintStart_toStartOf="@+id/admin_fragment_container6"
        app:layout_constraintTop_toBottomOf="@+id/position_3" />

    <Button
        android:id="@+id/createMatchFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="@+id/admin_fragment_container6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/halfImageView"
        app:layout_constraintVertical_bias="0.26" />

</androidx.constraintlayout.widget.ConstraintLayout>