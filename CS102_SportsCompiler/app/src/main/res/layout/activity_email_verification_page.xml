<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emailVerificationPage">

    <TextView
        android:id="@+id/verificationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail has been sent to:\nuser@bilkent.edu.tr\n\nWaiting for verification."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/resendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend"
        app:layout_constraintEnd_toEndOf="@+id/verificationTxt"
        app:layout_constraintStart_toStartOf="@+id/verificationTxt"
        app:layout_constraintTop_toBottomOf="@+id/verificationTxt"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>